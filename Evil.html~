  <a href="https://www.numberonecarpetcleaning.co.uk/wp-content/uploads/2021/06/BloodStainOnCarpet-2048x1365.jpeg">
  <p id="myText" class="shaky-text" style="font-size:100px;">YOU!</p>
</a>
  <script>
    function shakeText(element) {
      const shakeAmount = 10;
      const duration = 100;

      element.style.animation = `shake ${duration}ms`;

      setTimeout(() => {
        element.style.animation = '';
      }, duration);
    }

    function randomShake() {
      const randomX = Math.floor(Math.random() * (shakeAmount * 2 + 1)) - shakeAmount;
      const randomY = Math.floor(Math.random() * (shakeAmount * 2 + 1)) - shakeAmount;

      return `translate(${randomX}px, ${randomY}px)`;
    }

    const textElement = document.getElementById('myText');

    const textList = ["DIE", "I KNOW YOUR SECRETS", "SUBMIT YOURSELF TO DESPAIR", "I KnOw wHerE yOU lllIivvve", "GivEE mEEE tHHEIrrrr SSSSSOOOULLLS!!"];

    function randomText() {
      const randomIndex = Math.floor(Math.random() * textList.length);
      textElement.textContent = textList[randomIndex];
    }

    // Initial shake and text
    shakeText(textElement);
    randomText();

    // Continuously shake and change text randomly
    setInterval(() => {
  shakeText(textElement);
}, 25); // Shake every 500 milliseconds

setInterval(() => {
  randomText();
}, 2000); // Change text every 2 seconds
  </script>
</body>
</html>